<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/btnAccept"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="24dp"
    android:text="Accept"
    android:textSize="12sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <Button
    android:id="@+id/btnDelete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="24dp"
    android:text="Delete"
    android:textSize="12sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btnAccept"/>

  <Space
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btnDelete"/>

  <TextView
    android:id="@+id/usernameText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="Friend's Username"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="@id/btnAccept"
    app:layout_constraintStart_toStartOf="parent"/>

  <TextView
    android:id="@+id/timeReceived"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:text="Received:"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="@id/usernameText"
    app:layout_constraintTop_toTopOf="@id/btnDelete"/>

  <TextView
    android:id="@+id/timeReceivedText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="Time Text"
    android:textSize="14sp"
    app:layout_constraintStart_toEndOf="@id/timeReceived"
    app:layout_constraintTop_toTopOf="@id/btnDelete"/>

</androidx.constraintlayout.widget.ConstraintLayout>